<?xml version="1.0" encoding="utf-8" ?>
<mauiPopup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mauiPopup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
             x:Class="Calculate.WrongPage"
             xmlns:viewmodel="clr-namespace:Calculate.ViewModel"
             x:DataType="viewmodel:WrongViewModel"
             Title="WronPpage">
    <VerticalStackLayout>
        <Image
           Source="Wrong.png" 
           Aspect="AspectFit"
           WidthRequest="80" 
           HeightRequest="80"
           Grid.Row="1"
           Grid.Column="1"
           HorizontalOptions="Center" 
           VerticalOptions="Center" />
        <Button Text="Continue"
            Grid.Row="2"
            Command="{Binding ReturnCommand}"
            Grid.Column="1"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="0,10"
            BackgroundColor="Orange"
            TextColor="White"
            BorderColor="Orange"
            BorderWidth="1"
            CornerRadius="5"
            HeightRequest="40"
            WidthRequest="120"
            FontSize="16"/>
    </VerticalStackLayout>
</mauiPopup:BasePopupPage>